{
    "name": "phpmentors/workflower",
    "type": "library",
    "description": "A BPMN 2.0 workflow engine for PHP",
    "keywords": ["flow", "workflow", "process", "bpm", "bpmn"],
    "license": "BSD-2-Clause",
    "authors": [
        {
            "name": "KUBO Atsuhiro",
            "email": "kubo@iteman.jp"
        }
    ],
    "require": {
        "php": "^8.0",
        "phpmentors/domain-kata": "~1.4",
        "piece/stagehand-fsm": "~2.6",
        "symfony/expression-language": "~3.4|~4.0|~5.0",
        "ext-dom": "*"
    },
    "require-dev": {
        "phake/phake": "^4.0",
        "phpunit/phpunit": "~8.0"
    },
    "autoload": {
        "psr-4": {
            "PHPMentors\\Workflower\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PHPMentors\\Workflower\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        }
    }
}
